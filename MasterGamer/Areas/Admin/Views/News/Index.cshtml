@using EntityLayer.Concrete
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Haberler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Tanıtım Metni</th>
        <th>Oyun İsmi</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NewsId</td>
            <td>@item.ImageUrl</td>
            <td>@item.Introduction</td>
            <td>@item.GameName</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Admin/News/UpdateNews/@item.NewsId" class="btn btn-outline-danger">Güncelle</a></td>
            <td><a href="/Admin/News/DeleteNews/@item.NewsId" class="btn btn-outline-primary">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/News/AddNews" class="btn btn-outline-primary">Yeni Haber Yaz</a>