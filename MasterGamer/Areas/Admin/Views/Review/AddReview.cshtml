@model AddReviewViewModel
@{
    ViewData["Title"] = "AddReview";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>İnceleme Ekleme</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tanıtım Metni")
        <input type="text" asp-for="Introduction" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Oyun İsmi")
        <input type="text" asp-for="GameName" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Başlık")
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Alt Başlık")
        <input type="text" asp-for="Header" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama 2")
        <input type="text" asp-for="Description2" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="text" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Rating")
        <input type="text" asp-for="Rating" class="form-control" />
    </div><div class="form-group">
        @Html.Label("Referans")
        <input type="text" asp-for="TestimonialId" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-success">Oluştur</button>
</form>