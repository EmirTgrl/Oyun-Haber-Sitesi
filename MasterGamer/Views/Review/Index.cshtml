@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<Review>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="/endgame-master/img/page-top-bg/2.jpg">
        <div class="page-info">
            <h2>İncelemeler</h2>
            <div class="site-breadcrumb">
                <a href="/Default/Index/">Anasayfa</a>  /
                <span>İncelemeler</span>
            </div>
        </div>
    </section>
    <!-- Page top end-->
    <!-- Review section -->
    <section class="review-section">
        <div class="container">
            <div class="review-item">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="review-pic">
                                <img src="@item.ImageUrl">
                            </div>

                            <br />
                        </div>
                        <div class="col-lg-8">
                            <div class="review-content text-box text-white">
                                <div class="rating">
                                    <h5><i>Rating</i><span>@item.Rating</span> / 10</h5>
                                </div>
                                <div class="top-meta">@item.Date.ToShortDateString()</div>
                                <h3>@item.GameName</h3>
                                <p>@item.Introduction</p>
                                <a href="/Review/ReviewDetails/@item.ReviewId" class="read-more">Daha Fazlası <img src="~/endgame-master/img/icons/double-arrow.png" /></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="site-pagination">
                @Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
           {
               LiElementClasses = new List<string>
                {"page-link"}
           })
            </div>
        </div>
    </section>
</body>
</html>