@model SendMessageViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!DOCTYPE html>
<html lang="zxx">
<body>
    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="/endgame-master/img/page-top-bg/4.jpg">
        <div class="page-info">
            <h2>Bize Ulaşın</h2>
            <div class="site-breadcrumb">
                <a href="/Default/Index/">Anasayfa</a>  /
                <span>İletişim</span>
            </div>
        </div>
    </section>
    <!-- Page top end-->
    <!-- Contact page -->
    <section class="contact-page">
        <div class="container">
            <div class="map"><iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14376.077865872314!2d-73.879277264103!3d40.757667781624285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbd!4v1546528920522" style="border:0" allowfullscreen></iframe></div>
            <div class="row">
                <div class="col-lg-7 order-2 order-lg-1">
                    <form class="contact-form" method="post">
                        <input type="text" placeholder="E-mail adresiniz" asp-for="Mail">
                        <input type="text" placeholder="Konu" asp-for="Subject">
                        <textarea placeholder="İçerik" asp-for="MessageBody"></textarea>
                        <button class="site-btn">Mesaj Gönder<img src="~/endgame-master/img/icons/double-arrow.png" /></button>
                    </form>
                </div>
                <div class="col-lg-5 order-1 order-lg-2 contact-text text-white">
                    <h3>Merhabalar</h3>
                    <p>Şikayetleriniz hakkında, sitemizde geliştirmemizi istediğiniz herhangi bir kısım olursa ya da istediğiniz herhangi bir konu hakkında bize ulaşabilirsiniz.</p>
                    <div class="cont-info">
                        <div class="ci-icon"><img src="~/endgame-master/img/icons/location.png"></div>
                        <div class="ci-text">London England</div>
                    </div>
                    <div class="cont-info">
                        <div class="ci-icon"><img src="~/endgame-master/img/icons/phone.png"></div>
                        <div class="ci-text">+546 990221 123</div>
                    </div>
                    <div class="cont-info">
                        <div class="ci-icon"><img src="~/endgame-master/img/icons/mail.png"></div>
                        <div class="ci-text">mastergamer@gmail.com</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>